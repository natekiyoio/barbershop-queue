    <div class="container">
        <div class="card">
            <div class="header">
                <div class="header-icon">üì±</div>
                <h1>QR Code Generator</h1>
                <p>Generate a QR code for customer check-in access</p>
            </div>

            <div class="form-group">
                <label>Check-In Page URL</label>
                <input type="url" id="urlInput" placeholder="https://yourdomain.com/checkin.html" value="">
            </div>

            <button class="btn btn-primary" onclick="generateQR()">
                üîó Generate QR Code
            </button>

            <div class="qr-result" id="qrResult">
                <div class="qr-container">
                    <div id="qrcode"></div>
                </div>
                <div class="qr-url" id="fullUrl"></div>
                <button class="btn btn-success" id="downloadBtn" onclick="downloadQR()">
                    üì• Download QR Code
                </button>
            </div>

            <div class="info-box">
                <h3>üìã Instructions</h3>
                <ul>
                    <li>‚úèÔ∏è Enter your check-in page URL above</li>
                    <li>üîë Token will be auto-appended: <code>?token=barber_qr_2024</code></li>
                    <li>üì• Download and print at 4x4 inches minimum</li>
                    <li>üìç Display QR code at shop entrance</li>
                </ul>
            </div>

            <div class="token-display">
                <p>üîê Current Access Token: <code>barber_qr_2024</code></p>
            </div>
        </div>
    </div>

    <script>
        // ============================================
        // CONFIGURATION - Match with checkin.html
        // ============================================
        const ACCESS_TOKEN = 'barber_qr_2024';

        let qrCodeInstance = null;

        function generateQR() {
            const urlInput = document.getElementById('urlInput');
            const baseUrl = urlInput.value.trim();

            if (!baseUrl) {
                alert('Please enter your check-in page URL');
                return;
            }

            // Validate URL format
            try {
                new URL(baseUrl);
            } catch (e) {
                alert('Please enter a valid URL (including https://)');
                return;
            }

            // Build full URL with token
            const separator = baseUrl.includes('?') ? '&' : '?';
            const fullUrl = `${baseUrl}${separator}token=${ACCESS_TOKEN}`;

            // Show result section
            document.getElementById('qrResult').style.display = 'block';
            document.getElementById('fullUrl').textContent = fullUrl;
            document.getElementById('downloadBtn').style.display = 'block';

            // Clear previous QR code
            const qrContainer = document.getElementById('qrcode');
            qrContainer.innerHTML = '';

            // Generate new QR code
            qrCodeInstance = new QRCode(qrContainer, {
                text: fullUrl,
                width: 256,
                height: 256,
                colorDark: "#0c0a2e",
                colorLight: "#ffffff",
                correctLevel: QRCode.CorrectLevel.H
            });

            // Scroll to result
            setTimeout(() => {
                document.getElementById('qrResult').scrollIntoView({
                    behavior: 'smooth',
                    block: 'center'
                });
            }, 100);
        }

        function downloadQR() {
            const qrImage = document.querySelector('#qrcode img');
            if (!qrImage) {
                alert('Please generate a QR code first');
                return;
            }

            // Create download link
            const link = document.createElement('a');
            link.download = 'barber-checkin-qr.png';
            link.href = qrImage.src;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        // Auto-focus on load
        window.addEventListener('load', () => {
            document.getElementById('urlInput').focus();
        });

        // Generate on Enter key
        document.getElementById('urlInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                generateQR();
            }
        });
    </script>
</body>

